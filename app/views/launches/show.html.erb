<span><h1><%= @launch['mission_name'] %> - Mission <%= @launch['flight_number'] %></h1>
<h4>Date: <%= @launch['launch_date_utc'].to_date.strftime('%d-%m-%Y %l:%M') %></h4></span>

<div>
  <p> Launch Details: </p>
  <%= @launch['details'] if @launch['details']%>
  <p> Rocket used: <%= @launch['rocket']['rocket_name']%> <%=@launch['rocket']['rocket_type'] %></p>
  <p> <a href="<%= @launch['links']['article_link'] %>">Find out more about this launch</a>
</div>

<div>
  <% unless @launch['links']['flickr_images'].empty? %>
    <h3> Photos </h3>
    <% @launch['links']['flickr_images'].each do |image| %>
      <a href="<%= image %>"><img src="<%= image %>" height="90" width="90"></a>
    <%end%>
  <%end%>
</div>

<div>
  <iframe width="420" height="315"
  src="https://www.youtube.com/embed/<%= @launch['links']['youtube_id']%>"
  </iframe>
</div>
